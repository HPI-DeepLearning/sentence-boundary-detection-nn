[data]
normalize_class_distribution = false
train_files = ted/2010-1.xml,ted/2010-2.xml,ted/2012.xml,ted/2013.xml
test_files = ted/2011.xml

[word_vector]
# if set to 'avg' the average word vector is taken,
# otherwise the given word is taken as key error vector.
key_error_vector = this
vector_file = google

[windowing]
window_size = 5
punctuation_position = 3

[features]
use_question_mark = true
pos_tagging = false
number_replacement = true
